{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["@types/node"],
    "paths": {
      "@/functions/*": ["./src/functions/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/paths/*": ["./src/paths/*"],
      "@/subtasks/*": ["./src/subtasks/*"],
      "@/tasks/*": ["./src/tasks/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src/**.ts",
    "./tasks/**/**.ts",
    "./utils/**/**.ts",
    ".prettierrc.js",
    ".eslintrc.js",
    "*.config.js",
    "*.config.ts"
  ],
  "exclude": ["node_modules"]
}
