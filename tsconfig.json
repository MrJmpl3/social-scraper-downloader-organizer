{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": [
      "@types/node"
    ],
    "paths": {
      "@/commands/*": [
        "./src/commands/*"
      ],
      "@/functions/*": [
        "./src/functions/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/paths/*": [
        "./src/paths/*"
      ],
      "@/subtasks/*": [
        "./src/subtasks/*"
      ],
      "@/tasks/*": [
        "./src/tasks/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
