{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["@types/node"],
    "jsx": "react",
    "paths": {
      "@/hooks/*": ["./hooks/*"],
      "@/src/*": ["./src/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": [
    "./hooks/**/**.ts",
    "./src/**/**.ts",
    "./src/**/**.tsx",
    "./utils/**/**.ts",
    "./utils/**/**.tsx",
    ".prettierrc.js",
    ".eslintrc.js",
    "*.config.js",
    "*.config.ts"
  ],
  "exclude": ["node_modules"]
}
